 <link href="assets/characters_new.scss" rel="stylesheet">
<%= render "shared/header"%>

<div class="main-new">
  <div class="character-new">
    <div class="charaform-new">      
    <%= form_with model: @character, class: 'form-new', local: true do |f| %>
  
    <h1 class='form-header-text'>キャラクター情報入力</h1>
    <p></p>
    <%= render 'shared/error_messages', model: @character %>

    
    <div class="img-upload">
      <div class="form-group">
        <%= f.file_field :image, class:"form-control-file", id:"character-image" %>
      </div>
    </div>
  <div class="form-group">
    <div class="nickname-form">
      <label for="名前" class="sr-only">名前</label>
      <%= f.text_area :name, class:"form-control form-control-newchara", id:"character-name", placeholder:"名前" %>
    <p></p> 
  </div>
  <div class="form-group">
    <div class="nickname-form">
      <label for="出身" class="sr-only">出身</label>
      <%= f.text_area :residence, class:"form-control form-control-newchara", id:"residence", placeholder:"出身", autofocus: true %>
    </div>
    <p></p> 
  </div>
    
  <div class="form-group">
    <div class="nickname-form">
    <%#<div class="h5 mb-3 font-weight-normal">性別</div>%>
      <label for="性別" class="sr-only">性別</label>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-control form-control-newchara", id:"gender", placeholder:"出身"}) %>
    <p></p>
  </div>

  <div class="form-group">
    <div class="nickname-form">
      <label for="自己紹介" class="sr-only">自己紹介</label>
     <%= f.text_area :introductions, class:"form-control form-control-newchara", id:"phone_number", placeholder:"自己紹介を入力してください" %>
  </div>

  <div class="">
    <%= f.submit "編集する", class:"btn btn-md btn-secondary btn-block new-btn" %>
  </div>
<% end %>
    </div>
  </div>
</div>