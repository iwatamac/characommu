<%= render "shared/header"%>

<%# 商品の概要 %>
<div class="character-show">
  <div class="character-img-content">
      <%= image_tag @character.image, class:"character-box-img" %>
  </div>
  <div class="character-name-content">
    <h2 class="name">
      <%= @character.name %>
    </h2>
  </div>  
  <div class="character-residence">
    <%= @character.residence %>
  </div>    
  <div class="character-gender">
    <%= @character.gender.name %> 
  </div>
  <div class="character-introductions">
    <%= @character.introductions %> 
  </div>  
</div>  

<%# 編集と削除ページの実装 %>
<% if user_signed_in? %>
<% if current_user.id == @character.user_id %>
<%= link_to "編集", edit_character_path(@character.id), class: "character-edit-btn" %>
<%= link_to "削除", character_path, method: :delete, class: "character-delete-btn" %>
<% end %>
<% end %>