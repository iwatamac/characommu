 <head><link href="assets/registrations.scss" rel="stylesheet"></head>
  
   <%= image_tag "characommu_haikei2.jpg", class: "haikei-registrations moving" %>
   <body class="text-center">
    <%#form class="form-signin"%>
   
    <%= form_with model: @user, url: user_registration_path, class: 'form-signin', local: true do |f| %>
      <%= render 'shared/error_messages', model: @user %>
  
  
  <div class="nickname-form">
  <%= image_tag("regstration.jpg", class: "registration-tops") %>
  <label for="ニックネーム" class="sr-only">ニックネーム</label>
  <%= f.text_area :nickname, class:"form-control slidein", id:"nickname", placeholder:"ニックネーム" %>
  </div>
  <p></p>
  
  <div class="mail-form">
  <label for="メール" class="sr-only">メールアドレス</label>
    <%= f.email_field :email, class:"form-control slidein", id:"inpuEemail", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <p></p>

  <label for="inputPassword" class="sr-only">パスワード</label>
  <%= f.password_field :password, class:"form-control slidein", id:"inputPassword", placeholder:"パスワード" %>
  <p></p>

  <label for="inputPassword" class="sr-only">パスワード確認</label>
  <%= f.password_field :password_confirmation, class:"form-control slidein", id:"password-confirmation", placeholder:"パスワード(確認)" %>
  <p></p>

<div class='input-birth-wrap slidein'>
  <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
</div>


  <%= f.phone_field :phone_number, class:"form-control slidein", id:"phone_number", placeholder:"電話番号" %>
</div>
<p></p>

  <%= f.submit "会員登録", class:"btn btn-md btn-secondary btn-block" %>
  <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
  <% end %>
</body>
</html>



 



