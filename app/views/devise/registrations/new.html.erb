 <head><link href="assets/registrations.scss" rel="stylesheet"></head>
  
   <%= image_tag "characommu_haikei2.jpg", class: "haikei-tops moving" %>
   <body class="text-center">
    <%#form class="form-signin"%>
   
    <%= form_with model: @user, url: user_registration_path, class: 'form-signin', local: true do |f| %>
      <%= render 'shared/error_messages', model: @user %>
  
  
  <div class="nickname-form text-secondary wf-mplus1p">
  <%= image_tag("regstration.jpg", class: "registration-tops") %>
  <label for="ニックネーム" class="sr-only">ニックネーム</label>
  <%= f.text_area :nickname, class:"form-control-newchara kakomi-te2 slidein", id:"nickname", placeholder:"ニックネーム" %>
  </div>
  
  <div class="mail-form text-secondary wf-mplus1p">
  <label for="メール" class="sr-only">メールアドレス</label>
    <%= f.email_field :email, class:"form-control-newchara kakomi-te2 slidein", id:"inpuEemail", placeholder:"メールアドレス", autofocus: true %>
  </div>

  <div class="password-form text-secondary wf-mplus1p">
  <label for="inputPassword" class="sr-only">パスワード</label>
  <%= f.password_field :password, class:"form-control-newchara kakomi-te2 slidein", id:"inputPassword", placeholder:"パスワード" %>
  </div>

  <div class="password-form text-secondary wf-mplus1p">
  <label for="inputPassword" class="sr-only">パスワード確認</label>
  <%= f.password_field :password_confirmation, class:"form-control-newchara kakomi-te2 slidein", id:"password-confirmation", placeholder:"パスワード(確認)" %>
  </div>
   
<div class='input-birth-wrap  text-secondary wf-mplus1p slidein'>
  <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
</div>

<div class="phone-form text-secondary wf-mplus1p">
  <%= f.phone_field :phone_number, class:"form-control-newchara kakomi-te2 slidein", id:"phone_number", placeholder:"電話番号" %>
</div>

<%= image_submit_tag("registration_btn.jpg", class:"registration_btn") %>
  <% end %>
</body>
</html>



 



