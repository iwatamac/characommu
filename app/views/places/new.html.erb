<link href="assets/characters_new.scss" rel="stylesheet">
<%= render "shared/header"%>

<div class="main-new">
  <div class="character-new">
    <div class="charaform-new">      
    <%= form_with model: @place, local: true do |f| %>
  
    <%= image_tag "basyo_sakusei.jpg", class:"form-header-text form-header-text_image" %>
    <p></p>
    <%= render 'shared/error_messages', model: @place %>

  <div class="form-group">
    <div class="nickname-form">
      <label for="名前" class="sr-only">名前</label>
      <%= f.text_area :name, class:"form-control form-control-newchara", id:"character-name", placeholder:"場所の名前を入力してください" %>
    <p></p> 
    </div>
      <label for="自分のキャラ" class="sr-only">性別</label>
      <select name="place[character_ids][]" class="form-control">
          <option value="">チャットする自分のキャラクターを選択してください</option>
          <% Character.where(user_id: current_user.id).each do |character| %>
            <option value=<%= character.id %>><%= character.name %></option>
          <% end %>
        </select>
        <p></p>
        <select name="place[character_ids][]" class="form-control">
          <option value="">チャットするキャラクターを選択してください</option>
          <% Character.where.not(user_id: current_user.id).each do |character| %>
            <option value=<%= character.id %>><%= character.name %></option>
          <% end %>
        </select>
        <div class="">
        <%= image_submit_tag "sakusei_btn", class:"sakusei_btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>



